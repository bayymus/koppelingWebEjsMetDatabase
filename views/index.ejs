<!DOCTYPE <% %>>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
            padding: 10px;
        }

        th {
            background-color: #eee;
        }

        input {
            margin-bottom: 10px;
            display: block;
        }
    </style>
</head>

<body>

    <h2>Inspectie Formulier</h2>

    <form action="/" method="POST">
        <label for="fietsID">ID fiets </label>
        <input type="text" placeholder="geef fiets ID in" name="fietsID" required>
        <label for="naam">Naam</label>
        <input type="text" name="naam" value="FIETS" readonly required>
        <label for="gebruiker">Gebruiker</label>
        <input type="text" name="gebruiker" required>
        <label for="datumGekeurd">Datum Keuring</label>
        <input type="date" name="datumGekeurd" id="datumGekeurd" placeholder="vul formaat dd/mm/jaar in"
            onchange="berekenVervalDatum()">
        <label for="keuringVervalDatum" hidden>Keuring Vervaldatum</label>
        <input type="hidden" name="keuringVervalDatum" id="keuringVervalDatum">

        <input type="submit" value="Verzenden">
    </form>

    <a href="/Wijzig">Wijzig data</a>

    <% if (fietsen.length> 0) { %>
        <h2>Alle Fietsen</h2>
        <table>
            <tr>
                <th>ID</th>
                <th>Naam</th>
                <th>Gebruiker</th>
                <th>Datum Gekeurd</th>
                <th>Keuring Vervaldatum</th>
            </tr>
            <% for (let i=0; i < fietsen.length; i++) { %>
                <tr>
                    <td>
                        <%= fietsen[i].fietsid %>
                    </td>
                    <td>
                        <%= fietsen[i].naam %>
                    </td>
                    <td>
                        <%= fietsen[i].gebruiker %>
                    </td>
                    <td>
                        <%= fietsen[i].datumgekeurd %>
                    </td>
                    <td>
                        <%= fietsen[i].keuringvervaldatum %>
                    </td>
                </tr>
                <% } %>

        </table>
        <% } else { %>
            <p>Geen data beschikbaar of database niet bereikbaar.</p>
            <% } %>

                <script>
                    function berekenVervalDatum() {
                        const datumInput = document.getElementById('datumGekeurd');
                        const vervalInput = document.getElementById('keuringVervalDatum');

                        if (!datumInput.value) return;

                        const datum = new Date(datumInput.value);
                        datum.setFullYear(datum.getFullYear() + 1);

                        vervalInput.value = datum.toISOString().split('T')[0];
                    }
                </script>
</body>

</html>